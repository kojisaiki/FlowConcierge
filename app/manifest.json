{
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "description": "__MSG_appDescription__",
  "version": "0.0.0",
  "manifest_version": 2,
  "default_locale": "en",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "minimum_chrome_version": "10.0",
  "devtools_page": "pages/devtools.html",
  "content_scripts": [
    {
      "matches": ["https://*.flow.microsoft.com/*"],
      "js": ["scripts/contentscript.js"],
      "css": ["styles/content-tips.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "contentSettings",
    "contextMenus",
    "cookies",
    "debugger",
    "declarativeContent",
    "history",
    "input",
    "management",
    "pageCapture",
    "proxy",
    "tabCapture",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ]
}
